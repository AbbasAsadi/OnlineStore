<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/horizontal_cardView_product_horizontal_recyclerView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:strokeColor="@color/strokeCardView"
    app:strokeWidth="0.5dp">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="260dp">

        <ImageView
            android:id="@+id/image_product_horizontal_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@color/colorPrimary" />

        <TextView
            android:id="@+id/title_product_horizontal_recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_product_horizontal_recyclerView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="2dp"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="2"
            android:text="@string/app_name"
            android:textColor="@color/titleProduct"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/seperator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_product_horizontal_recyclerView"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:scaleType="fitXY"
            android:src="@color/strokeCardView" />

        <TextView
            android:id="@+id/price_regular_product_horizontal_recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/sale_price_product_horizontal_recyclerView"
            android:layout_below="@id/seperator"
            android:layout_marginStart="8dp"
            android:background="@drawable/red_line_shape"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/sale_price_product_horizontal_recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:gravity="start"
            android:text="@string/app_name"
            android:textColor="@color/priceColor" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>